<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/attraction_details_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <!-- Добавьте здесь элементы интерфейса для отображения деталей достопримечательности -->
  <TextView
    android:id="@+id/attractionTitleTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Название достопримечательности" />

  <TextView
    android:id="@+id/attractionDescriptionTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Описание достопримечательности" />

  <ImageView
    android:id="@+id/attractionPhotoImageView"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:scaleType="centerCrop"
    android:src="@drawable/default_photo" />

  <!-- Добавьте другие элементы по необходимости -->

</LinearLayout>

